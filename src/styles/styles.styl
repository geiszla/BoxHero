@import url(https://fonts.googleapis.com/css?family=Roboto:400);
body
    background-color: black
    -webkit-font-smoothing: antialiased
    font: normal 14px Roboto,arial,sans-serif
    color: white

.container
    padding: 25px
    position: fixed

.form-login
    background-color: #EDEDED
    padding-top: 10px
    padding-bottom: 20px
    padding-left: 20px
    padding-right: 20px
    border-radius: 15px
    border-color: #d2d2d2
    border-width: 5px
    box-shadow: 0 1px 0 #cfcfcf

h4
    border: 0 solid #fff
    border-bottom-width: 1px
    padding-bottom: 10px
    text-align: center

.form-control
    border-radius: 10px

.wrapper
    text-align: center

video
    position: fixed
    top: 50%
    left: 50%
    min-width: 100%
    min-height: 100%
    width: auto
    height: auto
    z-index: -100
    transform: translateX(-50%) translateY(-50%)
    no-repeat
    background-size: cover
    transition: 1s opacity